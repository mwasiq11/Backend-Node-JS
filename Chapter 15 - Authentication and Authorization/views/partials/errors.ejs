<% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
  <div class="mb-5 p-4 rounded-md bg-red-50 border border-red-200 text-red-600 flex items-start space-x-3">
    <i class="fas fa-exclamation-circle mt-1 text-red-500"></i>
    <p class="text-sm font-medium"><%= errorMessage %></p>
  </div>
<% } %>

<% if (typeof validationErrors !== 'undefined' && validationErrors.length > 0) { %>
  <div class="mb-5 p-4 rounded-md bg-red-50 border border-red-200 text-red-600">
    <ul class="list-disc list-inside space-y-1 text-sm">
      <% validationErrors.forEach(function(err) { %>
        <li><%= err.msg %></li>
      <% }); %>
    </ul>
  </div>
<% } %>
