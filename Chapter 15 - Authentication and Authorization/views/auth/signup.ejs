<%- include('../partials/head') %>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
/>
</head>

<body class="bg-gray-100 min-h-screen flex flex-col">
  <%- include('../partials/nav') %>

  <main
    class="flex-grow container mx-auto mt-10 p-8 bg-white rounded-2xl shadow-lg max-w-2xl border border-gray-100"
  >
    <h1
      class="text-3xl font-bold mb-6 text-center text-gray-800 border-b pb-4 tracking-wide"
    >
      Create Your Account
    </h1>

    <form action="/signup" method="POST" class="max-w-md mx-auto space-y-5">
      <!-- Error Handling -->
      <%- include('../partials/errors') %>

      <!-- Username -->
      <div>
        <label
          for="username"
          class="block text-sm font-medium text-gray-700 mb-1"
          >Username</label
        >
        <div class="relative">
          <span
            class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500"
          >
            <i class="fas fa-user"></i>
          </span>
          <input
            type="text"
            id="username"
            name="username"
            value="<%= oldInput.username ? oldInput.username : '' %>"
            placeholder="Enter your username"
            class="w-full pl-10 px-4 py-2.5 border rounded-md bg-gray-50 focus:bg-white focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
            required
          />
        </div>
      </div>

      <!-- Email -->
      <div>
        <label
          for="email"
          class="block text-sm font-medium text-gray-700 mb-1"
          >Email Address</label
        >
        <div class="relative">
          <span
            class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500"
          >
            <i class="fas fa-envelope"></i>
          </span>
          <input
            type="email"
            id="email"
            name="email"
            value="<%= oldInput.email ? oldInput.email : '' %>"
            placeholder="your.email@example.com"
            class="w-full pl-10 px-4 py-2.5 border rounded-md bg-gray-50 focus:bg-white focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
            required
          />
        </div>
      </div>

      <!-- Password -->
      <div>
        <label
          for="password"
          class="block text-sm font-medium text-gray-700 mb-1"
          >Password</label
        >
        <div class="relative">
          <span
            class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500"
          >
            <i class="fas fa-lock"></i>
          </span>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            class="w-full pl-10 px-4 py-2.5 border rounded-md bg-gray-50 focus:bg-white focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
            required
          />
        </div>
      </div>

      <!-- Confirm Password -->
      <div>
        <label
          for="confirmPassword"
          class="block text-sm font-medium text-gray-700 mb-1"
          >Confirm Password</label
        >
        <div class="relative">
          <span
            class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500"
          >
            <i class="fas fa-lock"></i>
          </span>
          <input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            placeholder="Confirm your password"
            class="w-full pl-10 px-4 py-2.5 border rounded-md bg-gray-50 focus:bg-white focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
            required
          />
        </div>
      </div>

      <!-- User Type -->
      <div class="p-4 bg-gray-50 rounded-md border border-gray-200">
        <p class="text-sm font-medium text-gray-700 mb-2">
          I want to register as:
        </p>
        <div class="flex space-x-6">
          <label class="inline-flex items-center cursor-pointer">
            <input
              type="radio"
              name="userType"
              value="guest"
              id="guest"
              class="form-radio text-red-500 focus:ring-red-500"
              <%= oldInput.userType === 'guest' ? 'checked' : '' %>
            />
            <span class="ml-2">Guest</span>
          </label>
          <label class="inline-flex items-center cursor-pointer">
            <input
              type="radio"
              name="userType"
              value="host"
              id="host"
              class="form-radio text-red-500 focus:ring-red-500"
              <%= oldInput.userType === 'host' ? 'checked' : '' %>
            />
            <span class="ml-2">Host</span>
          </label>
        </div>
      </div>

      <!-- Terms -->
      <div class="flex items-center mb-4">
        <input
          type="checkbox"
          name="terms"
          id="terms"
          class="form-checkbox text-red-500 focus:ring-red-500"
          required
        />
        <label for="terms" class="ml-2 text-gray-700 text-sm">
          I agree to the
          <a href="#" class="text-red-500 hover:underline">terms and conditions</a>.
        </label>
      </div>

      <!-- Submit -->
      <button
        type="submit"
        class="w-full bg-red-500 text-white py-3 rounded-md hover:bg-red-600 focus:ring-4 focus:ring-red-300 font-medium transition duration-300 flex items-center justify-center"
      >
        <span>Create Account</span>
        <i class="fas fa-arrow-right ml-2"></i>
      </button>

      <!-- Login Link -->
      <p class="text-center mt-4 text-gray-600 text-sm">
        Already have an account?
        <a href="/login" class="text-red-500 hover:underline">Log in</a>
      </p>
    </form>
  </main>
</body>
</html>
